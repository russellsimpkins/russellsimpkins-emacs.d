$bad = true;
$vars = array_merge($_GET,$_POST);
print_r($vars);
$objApplication = new Application();
$found = $objApplication->search(" email = " . $objApplication->util->wrap($vars['username']) .  " and passwd = '".  md5(stripslashes(trim($vars['password']))) . "'");

if ( !empty( $found ) && sizeof($found) == 1) {
  $sess = session_start();
  $_SESSION["valid"] = 1;
  $_SESSION["id"] = $found[0]->applicationId;
  //header("location: /signup.php");
} 

