<?php
function nytd_require($path) {
    if (!defined($path)) {
        define($path, 1);
        /*
         * someday make this be require(), when all NYTD code is                                * using this function instead of raw require_once()
         * Why? It is almost %30 faster.
         */
        if (!include_once($path)) {
            $tmp = debug_backtrace();
            $wanted = $tmp[0]['args'][0];
            $from   = $tmp[0]['file'];
            error_log(__FUNCTION__ . ": [ $from ]  not able to require  [ $wanted ]");
            exit();
        }
        return TRUE;
    }
}
?>