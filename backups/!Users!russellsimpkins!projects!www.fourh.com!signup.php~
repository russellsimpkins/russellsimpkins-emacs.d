            <option>--day--</option>
              <?php 
        for ($i = 0; $i<32; ++$i) {
            $day = $i;
            if ($day<10) $day = "0".$day;
            if ($day == $vars['exp_day'])
              $selected = " selected=\"yes\"";
            else
              $selected = "";
            echo "<option value=\"$day\"$selected>$day</option>";
        }
?>
          </select>
          <select name="exp_month" class="required styled" id="exp_month">
            <option>--month--</option>
<?php
$months['01']='January';
$months['02']='February';
$months['03']='March';
$months['04']='April';
$months['05']='May';
$months['06']='June';
$months['07']='July';
$months['08']='August';
$months['09']='September';
$months['10']='October';
$months['11']='November';
$months['12']='December';
foreach ($months as $var=>$val) {
  if ($var == $vars['exp_month'])
    $selected = " selected=\"yes\"";
  else
    $selected = "";
  echo "<option value=\"$var\"$selected>$val</option>";
}
?>
          </select>
          <select name="exp_year" class="required styled" id="exp_year">
            <option>--year--</option>
<?php
  $year = date('Y',time());
$start = $year+11;
while ($start-- >= $year) {
if ($start  == $vars['exp_year'])
              $selected = " selected=\"yes\"";
            else
              $selected = "";
            echo "<option value=\"$start\"$selected>$start</option>";
}
?>
          </select>
